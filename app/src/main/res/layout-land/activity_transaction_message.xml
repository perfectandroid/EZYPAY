<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_transaction_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.perfectlimited.ezypay.activity.messageshowactivity.TransactionMessageActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
         android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/logotext"
        android:id="@+id/imageViewlogo"
        android:layout_above="@+id/linearLayout2"
         />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#F0F0F0"
        android:id="@+id/linearLayout2"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="2dp"
            android:visibility="gone"

            android:background="@drawable/toolbar_dropshadow"/>
        <TextView
            android:text="TextView"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:background="#ffffff"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
             android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textViewMessage" />

        <TextView
            android:text="TextView"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFailMessage" />

        <TextView
            android:text="TextView"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAmount" />


        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"

            android:layout_height="wrap_content"
            android:id="@+id/textViewBillNo" />

        <TextView
            android:text="TextView"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBalance" />

        <Button
            android:text="OK"
            android:textColor="#ffffff"
            android:background="@drawable/buttonselctor_login"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:id="@+id/buttonokay" />
    </LinearLayout>
</RelativeLayout>
